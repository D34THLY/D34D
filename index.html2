  <title>LG Da GAWD</title>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;700&display=swap" rel="stylesheet">

  <style>
    :root {
      --button-bg: #ff0080;
      --button-hover-bg: #ff3399;
      --button-text: white;
    }

    html, body {
      margin: 0;
      padding: 0;
      font-family: 'Urbanist', sans-serif;
      color: white;
      text-align: center;
      overflow-x: hidden;
      height: 100%;
    }

    /* Fallback background image */
    body::before {
      content: "";
      background: url('background.jpg') center center / cover no-repeat fixed;
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      z-index: -2;
    }

    /* Video Background */
    .background {
      position: fixed;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
      filter: brightness(0.3);
    }

    .content {
      position: relative;
      z-index: 2;
      padding: 3rem 1rem;
    }

    img.profile {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      border: 3px solid #1DB954;
      object-fit: cover;
      margin: 1rem auto;
    }

    h1 {
      font-size: 2.5rem;
      color: #ff0080;
    }

    a.button {
      display: block;
      background: var(--button-bg);
      color: var(--button-text);
      padding: 1rem;
      margin: 1rem auto;
      width: 80%;
      max-width: 300px;
      text-decoration: none;
      border-radius: 10px;
      font-size: 1.1rem;
      transition: background 0.3s;
    }

    a.button:hover {
      background: var(--button-hover-bg);
    }

    /* Popup PNG bot */
    .popup-img {
      position: fixed;
      width: 100px;
      height: 100px;
      top: 10%;
      left: 10%;
      display: none;
      z-index: 99;
      pointer-events: none;
    }
  </style>
</head>
<body>

  <!-- âœ… Background Video -->
  <video class="background" autoplay muted loop playsinline preload="auto">
    <source src="background.mp4" type="video/mp4">
    Your browser does not support the video tag.
