  </div>

  <!-- âœ… PNG Popup Bot -->
  <img src="popup.png" alt="Popup" class="popup-img" id="popupBot">

  <script>
    const popup = document.getElementById("popupBot");

    function showPopup() {
      const top = Math.random() * 70 + 10;
      const left = Math.random() * 80 + 10;
      popup.style.top = `${top}%`;
      popup.style.left = `${left}%`;
      popup.style.display = "block";

      setTimeout(() => {
        popup.style.display = "none";
      }, 3000); // Show for 3 seconds
    }

    // Show popup every ~10 seconds
    setInterval(() => {
      showPopup();
    }, 10000);
  </script>
